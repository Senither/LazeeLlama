{
  "name": "LazeeLlama",
  "version": "1.0.0",
  "description": "A simple Discord bot that sends messages in a channel based off tweets from Twitter.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Alexis Tan <alexis@sen-dev.com>",
  "license": "MIT",
  "xo": {
    "space": 4,
    "semicolon": true,
    "rules": {
      "camelcase": 0,
      "new-parens": 0,
      "guard-for-in": 0,
      "prefer-const": 0,
